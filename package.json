{
  "name": "spec-browser",
  "displayName": "Spec Browser",
  "description": "Browse and organize markdown specification files with YAML metadata",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "specs",
    "documentation",
    "yaml",
    "browser"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/spec-browser"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "specsSidebar",
          "name": "Specs"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "specsSidebar",
        "contents": "No specs directory selected.\n[Select Specs Directory](command:extension.selectSpecsDirectory)"
      }
    ],
    "commands": [
      {
        "command": "extension.selectSpecsDirectory",
        "title": "Select Specs Directory",
        "icon": "$(folder-opened)"
      },
      {
        "command": "extension.expandAllSpecs",
        "title": "Expand All Specs",
        "icon": "$(expand-all)"
      },
      {
        "command": "extension.hideCompleted",
        "title": "Hide Completed Specs",
        "icon": "$(filter)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.selectSpecsDirectory",
          "when": "view == specsSidebar",
          "group": "navigation@1"
        },
        {
          "command": "extension.expandAllSpecs",
          "when": "view == specsSidebar",
          "group": "navigation@2"
        },
        {
          "command": "extension.hideCompleted",
          "when": "view == specsSidebar",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
